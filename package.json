{
  "name": "devicehive",
  "version": "3.2.1",
  "license": "MIT",
  "description": "devicehive",
  "main": "app.ts",
  "scripts": {
    "nodemon": "nodemon",
    "dev": "set NODE_ENV=development && ts-node-dev -r tsconfig-paths/register app.ts",
    "dev:db": "docker compose -f docker-compose.yml up -d",
    "prisma:publish": "dotenv -e ./envs/.env.development -- npx prisma db push",
    "prettier": "prettier --write '**/*.{js,ts}'",
    "test": "jest --config .jest.config.js --no-cache --detectOpenHandles",
    "start": "node ./dist/app.js",
    "copyenv": "shx cp -r envs dist/",
    "copyorm": "shx cp -r orm dist/",
    "build": "tsc && tsc-alias && npm run copyorm && npm run copyenv",
    "prod:start": "node ./dist/app.js"
  },
  "repository": "git@github.com:unix/koa-ts.git",
  "engines": {
    "node": ">= 14.x"
  },
  "prettier": "@geist-ui/prettier-config",
  "devDependencies": {
    "@geist-ui/prettier-config": "^1.0.1",
    "@types/jest": "^25.2.2",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/node": "^17.0.8",
    "esbuild": "^0.14.11",
    "esbuild-node-externals": "^1.4.1",
    "jest": "^26.6.3",
    "prettier": "^2.5.1",
    "shx": "^0.3.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "devicehive": "^2.1.0",
    "dotenv": "^12.0.3",
    "dt-routing-controllers": "1.0.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^10.1.1",
    "koa-swagger-decorator": "^1.8.7",
    "node-fetch": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.5",
    "typedi": "^0.10.0"
  }
}
